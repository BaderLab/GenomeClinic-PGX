{{#if drug}}
<table class="drug-cont large-12 small-12 medium-12" data-drug="{{drug}}">
	<thead>
		<tr class="drug-cont-header" data-state="open">
			<th>
				<div class="row">
					<div class="large-11 small-10 medium-11 columns">
						<h3><strong>{{drug}}</strong></h3>
					</div>
					<div class="large-1 small-2 medium-1 columns">
						<i class="minimize fa fa-chevron-up fa-2x" style="color:black"></i>
						<i class="expand fa fa-chevron-down fa-2x" style="color:black;display:none"></i>
					</div>
				</div>
			</th>
		</tr>
	</thead>
	<tbody class="interactions">
{{/if}}
		<tr>
			<td>
				<div class="large-12 small-12 medium-12 columns">
					<form data-abide="ajax" id="form-{{num}}">
						<div class="row">
					  		<div class="small-12 columns">
						    	<div data-alert class="alert-box radius secondary" style="display:none">
						    	<!-- Alert message goes here -->
							      	<div class="row">
							        	<div class="small-11 columns">
							        	  	<p></p>
							        	</div>
							      		<div class="small-1 columns">
							        		<a href="#" class='close-box'><i class="fi-x size-16" style="color:#606060"></i></a>
							      		</div>
							    	</div>
						    	</div>
							</div>
						</div>
						<div class="row">
							<div class="small-2 large-2 medium-2 right columns">
								<a href="#" class="edit-table right button tiny secondary radius"><i class="fi-pencil size-16" style="color:#A2A2A2"></i></a>
							</div>
							<div class="small-12 medium-12 large-5 columns">
								<div class="small-4 large-5 medium-4 columns" style="padding-left:0px">
									<h6><b>Primary Gene:</b></h6>
								</div>
								<div class="small-8 large-7	medium-8 columns">
									<h6 class='left p-gene-name'><i>{{pgx_1}}</i></h6>
								</div>
							</div>
							<div class="small-12 medium-12 large-5 columns left">
								<div class="small-4 large-6 medium-4 columns"  style="padding-left:0px">
									<h6><b>Therapeutic Class:</b></h6>
								</div>
								<div class="small-8 large-6	medium-8 columns">
									<h6 class='left p-class-name'><i>{{class_1}}</i></h6>
								</div>
							</div>
						</div>
						{{#if pgx_2}}
						<div class="row">
							<div class="small-12 medium-12 large-5 columns left">
								<div class="small-4 large-5 medium-4 columns " style="padding-left:0px">
									<h6><b>Secondary Gene:</b></h6>
								</div>
								<div class="small-8 large-7	medium-8 columns">
									<h6 class='left s-gene-name'><i>{{pgx_2}}</i></h6>
								</div>
							</div>
							<div class="small-12 medium-12 large-5 columns left">
								<div class="small-4 large-6 medium-4 columns"  style="padding-left:0px">
									<h6><b>Therapeutic Class:</b></h6>
								</div>
								<div class="small-8 large-6	medium-8 columns">
									<h6 class='left p-class-name'><i>{{class_2}}</i></h6>
								</div>
							</div>
						</div>
						{{/if}}
						<br>
						<div class="row">
							<div class="large-6 small-12 medium-6 columns">
								<div class="row collapse prefix-radius">
									<div class="large-4 small-4 medium-4 columns">
										<span class="prefix">Risk</span>
									</div>
									<div class="large-8 small-8 medium-8 columns left">
										<select name="risk" disabled="disabled" data-originalvalue="{{risk}}" value="{{risk}}" id="{{num}}-risk" required>
											<option></option>
											<option>Low</option>
											<option>Medium</option>
											<option>High</option>
										</select>
										<small class="error">Required</small>
									</div>
								</div>
							</div>
						</div>
						<div class="row">	
							<div class="large-12 small-12 medium-12 columns">
								<label><h6><b>Recomendation</b></h6></label>
								<textarea name="rec" rows=4 data-originalvalue="{{rec}}" disabled="disabled" id="{{num}}-rec" required>{{rec}}</textarea>
								<small class="error">Required</small>
							</div>
						</div>
						<div class="row">	
							<div class="large-4 small-12 medium-6 columns right">
								<ul class="button-group even-3 form-triggers" style="display:none">
									<li><button type="submit" class="button success tiny submit-changes">Submit</button></li>
									<li><a href="#" class="button tiny cancel-changes">Cancel</a></li>
									<li><a href="#" class="button tiny alert delete-table">Delete</a></li>
								</ul>
							</div>
						</div>
					</form>
				</div>
			</td>
		</tr>
{{#if drug}}
	</tbody>
</table>
{{/if}}