<div class="row" style="padding-top: 30px;">  
	<div class="large-12 columns">
		<h2><i class="fa fa-asterisk"></i>&nbspManage Haplotypes</h2>
		<h5 class="subheader">Displaying all available phase infomration</h5>
		<p>Select any of the available genes below to modify the phasing information for that specific gene, adding new haplotypes,markers,etc or additionally create a new haplotype.</p>
		<div class="row">
        	<div class="large-3 columns">
          		<a href="haplotypes/new" class="button alert radius left" id="add-new-haplotype">Add New Haplotype</a>
        	</div>
      	</div> 
	</div>
</div>
<div class="row">
	<div class="large-12 columns" style="margin-top:30px">
		{{#if haplotypes}}
		<table id="haplotype-table" class="large-12">
			<thead>
				<tr>
					<th class="large-6">Gene</th>
					<th class="large-3 text-center">Number of Haplotypes</th>
					<th class="large-3 text-center">Number of Markers</th>
				</tr>
			</thead>
			<tbody>
				{{#each haplotypes}}
				<tr class="haplotype-row" data-name="{{@key}}">
					<td>{{@key}}</td>
					<td class="text-center">{{this.numHap}}</td>
					<td class="text-center">{{this.numMark}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
		{{else}}
		<div data-alert class="alert-box radius secondary" id="error-display-box">
	      <!-- Alert message goes here -->
	      <div class="row">
	          <div class="small-11 columns">
	              <p id="error-display-message">There does not appear to be anything here</p>
	          </div>
	        </div>
	    </div>
		{{/if}}
   	</div>
</div>