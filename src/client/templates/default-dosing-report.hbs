<!-- sick kids color: #3daed6 -->
<html class="no-js" lang="en">
  	<head>
    	<meta charset="utf-8"/>
    	<link rel="stylesheet" type="text/css" href="../public/css/pgx-report.css" />
  	</head>
  	<body>
	  	<div class="row" style="margin-top:0px;margin-bottom:0px;">
	  		<div class="col-12 columns green-back">
	  			<h4 style="padding-left:5px;margin-bottom:0px;">Dosing Guidelines Report</h4>
	  		</div>
	  	</div>
	  	<hr color="#B0B0B0" style="height:2px;margin-top:0px">
	  	<section>
		  	<div class="row">
		  		<div class="col-4 columns grey-border">
		  			<div class="row bspacer-2">
		  				<div class="col-12 columns" style="background-color:#71a971">
		  					<p class="size-10 lspacer-2">Information</P>
		  				</div>
		  			</div class="row">
			  		<div class="row separator">
			  			<div class="col-4 columns">
			  				<p class="lspacer-2 size-8 left thin"><b>REPORT DATE</b></p>
			  			</div>
			  			<div class="col-6 right columns">
			  				<p class="rspacer-2 size-8 left thin">{{date}}</P>
			  			</div>
			  		</div>
			  		<div class="row separator">
			  			<div class="col-4 columns">
			  				<p class="lspacer-2 size-8 sickkids left thin"><b>Report Number</b> </p>
			  			</div>
			  			<div class="col-6 right columns">
			  				<p class="rspacer-2 size-8 left thin">{{reportNum}}</P>
			  			</div>
			  		</div>
			  		<div class="row bspacer-2">
			  			<div class="col-4 columns">
			  				<p class="lspacer-2 size-8 sickkids left thin"><b>Specimen Type</b> </p>
			  			</div>
			  			<div class="col-6 right columns">
			  				<p class="rspacer-2 size-8 left thin">{{patient.sampletype}}</P>
			  			</div>
			  		</div>
			  		<div class="row">
		  				<div class="col-12 columns" style="background-color:#71a971">
		  					<p class="size-10 lspacer-2">Referring Physician</P>
		  				</div>
		  			</div>
		  			<div class="row">
			  			<div class="col-12 columns">
			  				<p class="lspacer-2 size-8 left">{{dr.name.last}} {{dr.name.first}} M.D.</p>
			  				<p class="lspacer-2 size-8 left">{{dr.address}}</p>
			  				<p class="lspacer-2 size-8 left">{{dr.city}}, {{dr.region}}</p>
			  				<p class="lspacer-2 size-8 left">{{dr.postal}}</p>
			  			</div>
			  		</div>
			  	</div>
		  		<div class="col-8 right columns">
		  			<div class="row">
		  				<div class="col-12 columns grey-border" style="background-color:#71a971">
		  					<p class="size-10 lspacer-2">Patient Information</p>
		  				</div>
		  			</div>
		  			<div class="row lspacer-2">
						<div class="col-6 columns">
							<div class="row">
					  			<div class="col-3 columns">
					  				<p class="size-8 left"><b>NAME</b></p>
					  			</div>
					  			<div class="col-9 columns">
					  				<p class="size-8 left">{{patient.name.last}}, {{patient.name.first}}</p>
					  			</div>
					  		</div>
				  			<div class="row">
				  				<div class="col-3 columns">
				  					<p class="size-8 left"><b>PATIENT ID</b></p>
				  				</div>
				  				<div class="col-9 columns">
				  					<p class="size-8 left">{{patient.mrn}}</p>
				  				</div>
				  			</div>
				  			<div class="row">
				  				<div class="col-3 columns">
				  					<p class="size-8 left"><b>SEX</b></p>
				  				</div>
				  				<div class="col-9 columns">
				  					<p class="size-8 left">{{patient.sex}}</p>
				  				</div>
				  			</div>
					  	</div>
					  	<div class="col-6 columns">
				  			<div class="row">
				  				<div class="col-6 columns">
				  					<p class="size-8 left"><b>DOB</b></p>
				  				</div>
				  				<div class="col-6 columns">
				  					<p class="size-8 left">{{patient.dob.date}}/{{patient.dob.month}}/{{patient.dob.year}}</p>
				  				</div>
				  			</div>
				  			<div class="row">
				  				<div class="col-6 columns">
				  					<p class="size-8 left"><b>WEIGHT</b></p>
				  				</div>
				  				<div class="col-6 columns">
				  					<p class="size-8 left">{{patient.weight}}</p>
				  				</div>
				  			</div>
				  			<div class="row">
				  				<div class="col-6 columns">
				  					<p class="size-8 left"><b>HEIGHT</b></p>
				  				</div>
				  				<div class="col-6 columns">
				  					<p class="size-8 left">{{patient.height}}</p>
				  				</div>
				  			</div>
				  		</div>
				  	</div>
				  	<div class="row lspacer-2">
					  	<div class="col-12 columns">
				  			<div class="row">
						  		<div class="col-5 columns">
						  			<p class="size-8 left"><b>CURRENT MEDIACATIONS</b></p>
						  		</div>
						  		<div class="col-7 columns">
						  			<p class="size-8 left">{{patient.medications}}</p>
						  		</div>
						  	</div>
					  	</div>
					</div>
					<div class="row lspacer-2">
						<div class="col-12 columns">
							<label class="size-8"><b>REASON FOR TESTING</b></label>
							<p  class="size-8 left">{{patient.reason}}</p>
						</div>
					</div>
			  	</div>
		  	</div>
		  	<div class="row tspacer-4">
		  		<div class="col-12 columns">
		  			<div class="row">
		  				<div class="col-3 columns">
		  					<p class="size-10 sickkids left">Medications of Interest: </p>
		  				</div>
		  				<div class="col-9 columns">
		  					<p class="size-10 left">{{drugsOfInterest}}</p>
		  				</div>
		  			</div>
		  		</div>
		  	</div>
	  	</section>
	  	<hr color="#3DAED6" style="height:1px">
	  	<h5 class="sickkids thin lspacer-4">Summary</h5>
	  	<hr color="#3DAED6" style="height:1px">
	  	<section style="margin:2%">
		  	<div class="row">
		  		<div class="col-12 columns">
		  			<textara class="size-10">{{summary}}</textarea>
		  		</div>
	  		</div>
	  	</section>
	  	<hr color="#3DAED6" style="height:1px">
	  	<h5 class="sickkids thin lspacer-4">Perscribing recomendations</h4>
	  	<hr color="#3DAED6" style="height:1px">
	  	<section id="recomendations">
	  	{{#if  recomendations}}
	  	{{#each recomendations}}
	  		<section class="recomendation">
			  	<div class="row">
			  		<div class="col-12 columns">
				  		<div class="row">
				  			<div class="col-8 columns">
								<div class="row">
									<div class="col-2 columns">
										<p class="sickkids size-10 left">Drug: </p>
									</div>
									<div class="col-10 columns">
										<p class="size-10 left">{{@key}}</p>
									</div>
								</div>
							</div>
							<div class="col-4 columns">
								<div class="row">
									<div class="col-8 columns">
										<p class="sickkids size-10 left">Therapeutic Risk: </p>
									</div>
									<div class="col-4 columns">
										<p class="size-10 left">{{risk}}</p>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-12 columns">
				  				<h6 class="sickkids thin">Dosing Recomendation:</h6>
				  				<p class="size-10">{{rec}}</p>
				  			</div>
				  		</div>
				  	</div>
				</div>
			</section>
			{{/each}}
	  	</section>
	  	{{else}}
	  	<div class="row">
		  	<div class="col-12 columns grey-border" style="background-color:#E8F2FF;">
				<p class="size-10" style="padding:2%">There were no perscribing recomendations found corresponding to the patients genetic profile</p>
			</div>
		</div>
		{{/if}}
		<br>
		<hr color="#3DAED6" style="height:1px;page-break-before:always;">
		<h5 class="sickkids thin lspacer-4">Individualized Care Report: Summary of Drug-Gene Interactions for Future Prescribing</h4>
		<hr color="#3DAED6" style="height:1px">
		<div class="row">
			<div class="col-12 columns">
				<span style="margin:1%"><p class="size-10">Based on patient genetic profile and current knowledge in pharmacogentics, the following is a summary for future medication administration for this patient. For comprehensive future dosing recommendations, the pharmacogenetic consultation report should be reassessed.</p></span>
			</div>
		</div>
		<div class="row">
			<div class="col-12 columns">
				{{#if future}}
				<table class="rec no-space col-12">
					<thead class="rec">
						<tr class="rec">
							<th class="size-12 sickkids col-2 rec" style="padding:1%">Gene</th>
							<th class="size-12 sickkids col-4 rec" style="padding:1%">Patient Therapeutic status</th>
							<th class="size-12 sickkids col-6 rec" style="padding:1%">Implications of Genetic Profile</th>
						</tr>
					</thead>
					<tbody>
					{{#each future}}
						<tr class="rec">
							<td class="size-10" style="padding:1%">{{Gene}}</td>
							<td class="size-10" style="padding:1%">{{Therapeutic_Class}}</td>
							<td class="size-10" style="padding:1%">{{rec}}</td}}
						</tr>
					{{/each}}
					</tbody>
				<table>
				{{else}}
				<div class="col-12 columns grey-border" style="background-color:#E8F2FF;">
					<p class="size-10" style="padding:2%">There were no future recomendations found corresponding to the patients genetic profile</p>
				</div>
				{{/if}}
			</div>
		</div>
	</body>
</html> 

