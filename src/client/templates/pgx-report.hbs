<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" type="text/css" href="../public/css/pgx-report.css" />
  </head>
  <body>
    <div class="row">
      <div class="large-3 columns"></div>
      <div class="large-6 columns">
        <h4 class="center"><u>PGX Report</u>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="large-12 columns">
        <p><u><b>Report Generated on:</b></u> {{date}}</p>
      </div>
      <div class="large-12 columns">
        <p><u><b>Report Generated by:</b></u> {{user}}</p>
      </div>
    </div>
    <div class="row">
      <div class="large-4 columns">
        <p><u><b>Patient Id:</b></u> {{patientID}}</p>
      </div>
      <div class="large-4 columns">
        <p><u><b>Alias:</b></u> {{patientAlias}}</p>
      </div>
      <div class="large-2 columns">
        <p><u><b>Age:</b></u> {{age}}</p>
      </div>
      <div class="large-2 columns">
        <p><u><b>Sex:</b></u> {{sex}}</p>
        </div>
        <div style="margin-bottom:0px" class="large-12 columns">
          <h6 style="margin-bottom:0px;padding-bottom:0px">Results</h6>
        </div>
        <hr>
    </div>
    {{#pgxGenes}}
    <div class="row" style="margin-bottom:20px;">
      <div class="large-12 columns">
        <div class="large-4 columns">
          <p><u><b>Gene:</u></b> {{gene}}</p>
        </div>
        <div class="large-8 columns">
          <p><u><b>Haplotype:</u></b> {{#if possibleHaplotypes}}{{#possibleHaplotypes}}{{string}}{{after}}{{/possibleHaplotypes}}{{else}}<em style="color:red;">No haplotypes detected</em>{{/if}}</p>
        </div>
      </div>
      <div class="large-12 columns">
        <table>
          <thead>
            <tr>
              <th>Haplotype</th>
              {{#heads}}
              <th>{{id}}</th>
              {{/heads}}
            </tr>
          </thead>
          <tbody>
            {{#patientHaplotypes}}
            <tr class="patient">
              <td><em>{{name}}</em></td>
              {{#variants}}
              <td class="variant-{{class}}">{{variant}}</td>
              {{/variants}}
            </tr>
            {{/patientHaplotypes}}
            {{#haplotypes}}
            <tr>
              <td>{{name}}</td>
              {{#variants}}
              <td class="variant-{{class}}">{{variant}}</td>
              {{/variants}}
            </tr>
            {{/haplotypes}}
          </tbody>
        </table>
      </div>
    </div>
    {{/pgxGenes}}
    <div class="row"> 
      <div class="large-12 columns" style="margin-top: 40px; margin-bottom: 20px;">
        <h5><strong>Disclaimer</strong></h5>
        <h6>{{disclaimer}}</h6>
      </div>
    </div>
    <div class="row"> 
      <div class="large-12 columns">
        <h6><em>{{report-footer}}</em></h6>
      </div>
    </div>
  </body>
 </html>
