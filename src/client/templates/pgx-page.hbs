{{!-- NOTE: Put quotes around attributes that may have spaces, or handlebars
	  will only output the first word. --}}
<div class="row" style="margin-top:30px">	
	<div class="large-12 columns">
		<a href="/browsepatients" class="button radius"><i class="fa fa-arrow-left"></i>&nbspBack</a>
		{{#if errMessage}}
		<div class="row">
	      <div class="small-12 columns">
	        <div data-alert class="alert-box radius secondary" id="error-display-box">
	        <!-- Alert message goes here -->
	          <div class="row">
	            <div class="small-11 columns">
	            	<h4>Warning</h4>
	              	<p id="error-display-message">There is incomplete or missing marker information for the following genes: {{errMessage}}, preventing them from accurately being displayed in the report. In order to display the PGX analysis for these genes, please review the their related markers and provide the missing information</p>
	            </div>
	          	<div class="small-1 columns">
	            	<a href="#" class='close-box'><i class="fi-x size-16" style="color:#606060"></i></a>
	          	</div>
	        	</div>
	    	</div>
	  	</div>
	  	{{/if}}
		<div class="row">
			<div class="large-12 columns">
				{{#if patientAlias}}
				<h2><i class="fi-torso"></i> {{patientAlias}} (<em>{{patientID}}</em>)</h2>
				{{else}}
				<h2><i class="fi-torso"></i> <em>{{patientID}}</em></h2>
				{{/if}}
			</div>
		</div>
	</div>
	<div class="row" style="padding-left:10px">
		<div class="large-10 columns">
			<h5 style="margin-top: 30px;">Pharmacogenomic results based on phased and unphased genotypes from this sample.</h5>
			<h6 style="margin-bottom: 40px;"><em><a href="#" id="collapse-all-haplotypes">Show less</a></em></h6></p>
		</div>
		<div class="large-2 columns">
			<a href="#" id="direct_download" style="display:none;">test</a>
			<a href="#" id="download" class="button radius size-12">Download</a>
		</div>
	</div>

</div>
{{#pgxGenes}}
<div class="row">
	<div class="large-12 columns">
			<div class="row">
				<div class="large-2 columns">
					<h3><strong>{{gene}}</strong></h3>
				</div>
				<div class="large-9 columns">

					<h3>
					{{#if possibleHaplotypes}}
					<em class="haplo-present">
					{{#possibleHaplotypes}}
						{{string}}{{after}}
					{{/possibleHaplotypes}}
					{{else}}
						<em class="haplo-not-present" style="color:red;">No haplotypes detected</em>
					{{/if}}
					</h3>
				</div>
				<div class="large-1 columns">
					<a href="#"><i class="fa fa-plus haplotype-expand" gene="{{gene}}" expanded="yes"></i></a>
				</div>
			</div>
			
			{{!-- The next div is for sliding. Tables cannot slide using JQuery. See http://stackoverflow.com/questions/467336/how-to-use-slidedown-or-show-function-on-a-table-row --}}
			
			<div id="table{{gene}}" class="haplotype-expand-div">
				<table>
					<thead>
						<tr>
							<th>Haplotype</th>
							{{#heads}}
							<th><a target="_blank" href={{url}} rs={{id}}">{{id}}</a></th>
							{{/heads}}
						</tr>
					</thead>
					<tbody>
						{{#patientHaplotypes}}
						<tr class="patient-genotype-row">
							<td><em>{{name}}</em></td>
							{{#variants}}
							<td class="variant-{{class}}">{{variant}}</td>
							{{/variants}}
						</tr>
						{{/patientHaplotypes}}
						{{#haplotypes}}
						<tr>
							<td>{{name}}</td>
							{{#variants}}
							<td class="variant-{{class}}">{{variant}}</td>
							{{/variants}}
						</tr>
						{{/haplotypes}}
					</tbody>
				</table>
			</div>
	</div>	
</div>
{{/pgxGenes}}
<div class="row">	
	<div class="large-12 columns" style="margin-top: 40px; margin-bottom: 20px;">
		<h5><strong>Disclaimer</strong></h5>
		<h6>{{disclaimer}}</h6>
	</div>
</div>
<div class="row">	
	<div class="large-12 columns">
		<h6><em>{{report-footer}}</em></h6>
	</div>
</div>