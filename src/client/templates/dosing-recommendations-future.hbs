{{#each future}}
	<fieldset class="future-field" data-id="{{_id}}">
		<div class="row">
			<div class="large-10 small-8 medium-8 columns">
				<label><h6><b>Dependant Genes</b></h6></label>
			</div>
			<div class="large-1 small-2 medium-2 columns">
				<a href="#" class="button tiny flag radius right {{#if flagged}}warning{{else}}secondary{{/if}}"><i class="fa fa-flag"></i></a>
			</div>
			<div class="large-1 small-2 medium-2 columns right">
				<a href="#" class="button tiny radius right remove {{#if flagged}}{{else if warning}}{{else}}secondary removed{{/if}}"><i class="fa fa-check"></i></a>
			</div>
		</div>
		{{#each genes}}
		<div class="row">
			<div class="small-4 large-2 medium-2 columns">
				<label><b>Gene:</b></label>
			</div>
			<div class="small-8 large-2 medium-2 columns">
				<p class='left gene-name'><i>{{this}}</i></p>
			</div>
			<div class="small-4 large-2 medium-2 columns">
				<label><b>Predicted Effect:</b></label>
			</div>
			<div class="small-8 large-3 medium-2 columns">
				<p class='left class-name'><i>{{lookup ../classes @index}}</i></p>
			</div>
			{{#ifCnv ../cnv @index}}
				<div class="small-4 large-1 medium-2 columns">
					<label><b>CNV:</b></label>
				</div>
				<div class="small-8 large-2 medium-2 columns">
					<p class="cnv-count"><i>{{this}}</i></p>
				</div>
			{{/ifCnv}}
		</div>
		{{/each}}
		<div class="row">
			<div class="large-12 small-12 medium-12 columns">
				<label><h6><b>Recommendation</b></h6></label>
				<textarea class="rec" rows=5>{{rec}}</textarea>
				<small class="error">Required</small>
			</div>
		</div>
	</fieldset>
{{/each}}
