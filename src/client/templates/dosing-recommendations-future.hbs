{{#each future}}
	<fieldset class="future-field" data-id="{{_id}}">
		<legend class="gene-name">{{gene}}</legend>
		<div class="row">
			<div class="large-4 small-4 medium-4 columns">
				<label><h6><b>Metabolic Status</b></h6><label>
			</div>
			<div class="large-6	small-6 medium-6 columns">
				<p class="class-name">{{class}}</p>
			</div>
			<div class="large-2 small-2 medium-2 columns">
				<a href="#" class="button tiny radius right"><i class="fi-x"></i></a>
			</div>
		</div>	
		<div class="row">
			<div class="large-12 small-12 medium-12 columns">
				<label><h6><b>Recommendation</b></h6></label>
				<textarea class="rec" rows=5 required>{{rec}}</textarea>
				<small class="error">Required</small>
			</div>
		</div>
	</fieldset>
{{/each}}
